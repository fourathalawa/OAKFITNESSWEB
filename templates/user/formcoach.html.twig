{% form_theme formUC 'bootstrap_4_layout.html.twig' %}

{{ form_start(formUC,{'attr':{'novalidate':'novalidate'}}) }}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">



<div class="container">

    <hr>

    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Create Account</h4>
            <form>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <div class="form-control">
                        {{ form_label(formUC.nomuser,"Name :") }}
                        {{ form_widget(formUC.nomuser) }}
                        {{ form_errors(formUC.nomuser) }}
                    </div>

                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <div class="form-control">
                        {{ form_label(formUC.prenomuser,"Last Name :") }}
                        {{ form_widget(formUC.prenomuser) }}
                        {{ form_errors(formUC.prenomuser) }}
                    </div>

                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <div class="form-control">
                        {{ form_label(formUC.mailuser,"Email :") }}
                        {{ form_widget(formUC.mailuser) }}
                        {{ form_errors(formUC.mailuser) }}
                    </div>
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-text-height"></i> </span>
                    </div>
                    <div class="form-control">
                        {{ form_label(formUC.telephonenumberuser,"Telephone number :") }}
                        {{ form_widget(formUC.telephonenumberuser) }}
                        {{ form_errors(formUC.telephonenumberuser) }}
                    </div>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
                    </div>

                    <div class="form-control">
                        {{ form_label(formUC.datenaissanceuser,"Date de Naissance :") }}
                        {{ form_widget(formUC.datenaissanceuser) }}
                        {{ form_errors(formUC.datenaissanceuser) }}
                    </div>
                </div> <!-- form-group// -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-text-height"></i> </span>
                    </div>
                    <div class="form-control">
                        {{ form_label(formUC.experienceuser,"Experience :") }}
                        {{ form_widget(formUC.experienceuser) }}
                        {{ form_errors(formUC.experienceuser) }}
                    </div>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-text-height"></i> </span>
                    </div>

                    <div class="form-control">
                        {{ form_label(formUC.diplomeuser,"Diplome :") }}
                        {{ form_widget(formUC.diplomeuser) }}
                        {{ form_errors(formUC.diplomeuser) }}
                    </div>
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>

                    <div class="form-control">
                        {{ form_label(formUC.password,"Password :") }}
                        {{ form_widget(formUC.password) }}
                        {{ form_errors(formUC.password) }}
                    </div>
                </div> <!-- form-group// -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
                </div> <!-- form-group// -->
                <p class="text-center">Have an account? <a href="">Log In</a> </p>
            </form>
        </article>
    </div>

</div>




{{ form_end(formUC) }}
<br>



