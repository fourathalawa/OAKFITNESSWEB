{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nomuser</th>
                <th>Prenomuser</th>
                <th>Mailuser</th>
                <th>Telephonenumberuser</th>
                <th>Datenaissanceuser</th>
                <th>Experienceuser</th>
                <th>Diplomeuser</th>
                <th>Adressesallesport</th>


            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nomuser }}</td>
                <td>{{ user.prenomuser }}</td>
                <td>{{ user.mailuser }}</td>
                <td>{{ user.telephonenumberuser }}</td>
                <td>{{ user.datenaissanceuser ? user.datenaissanceuser|date('Y-m-d') : '' }}</td>
                <td>{{ user.experienceuser }}</td>
                <td>{{ user.diplomeuser }}</td>
                <td>{{ user.adressesallesport }}</td>

                <td>
                    <a href="{{ path('app_user_show', {'iduser': user.iduser}) }}">Show</a>
                    <a href="{{ path('app_user_delete', {'iduser': user.iduser}) }}">Delete</a>
                    {% if(user.roleuser == 0) %}
                    <a href="{{ path('app_user_editadherent', {'iduser': user.iduser}) }}">Edit</a>
                    {% elseif(user.roleuser == 1) %}
                        <a href="{{ path('app_user_editcoach', {'iduser': user.iduser}) }}">Edit</a>
                    {% elseif(user.roleuser == 2) %}
                        <a href="{{ path('app_user_editmanager', {'iduser': user.iduser}) }}">Edit</a>
                    {% elseif(user.roleuser == 3) %}
                        <a href="{{ path('app_user_editadmin', {'iduser': user.iduser}) }}">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_newadmin') }}">Create new</a>
{% endblock %}
