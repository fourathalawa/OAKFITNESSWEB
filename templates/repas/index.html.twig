

    {% extends 'base-back.html.twig' %}

    {% block title %}Meals{% endblock %}

    {% block body %}


        <div class="row text-center mt-4">
            <div class="col-12">
                <h3 class="f-w-600">Meals</h3>
            </div>
        </div>
        <div class="container-fluid product-wrapper mb-3  p-2">
            <div class="product-grid">
                <div class="feature-products">
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="product-sidebar">
                                <div class="filter-section">
                                    <div class="card shadow-lg">
                                        <a href="{{ path('app_repas_new')}}" style="color:whitesmoke;">
                                            <div class="card-header">
                                                <h6 class="mb-0">Add a Meal<span class=""><i class="mdi mdi-plus"></i></span></h6>
                                            </div>
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid default-dash mb-3 mt-4">
            <div class="row">
                <div class="col-16">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <div class="best-dealer-table responsive-tbl">
                                <div class="item">
                                    <div class="table-responsive product-list">
                                        <table class="table table-bordernone">
                                            <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Breakfast</th>
                                                <th>Lunch</th>
                                                <th>Dinner</th>
                                                <th>Calorie</th>
                                                <th>Rest/Active</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for repa in repas %}
                                                <tr>

                                                    <td>
                                                        <div class="t-title d-inline-block align-middle"><a href="#1"><img class="width-50 m-r-15 rounded-circle align-top" src="{{asset('uploads/images/' ~ repa.image )}}" alt="" data-original-title="" title=""></a>
                                                        </div>
                                                    </td>
                                                    <td>{{ repa.pdej }}</td>
                                                    <td>{{ repa.dej }}</td>
                                                    <td>{{ repa.dinn }}</td>
                                                    <td>{{ repa.calorie }}</td>
                                                    <td>{{ repa.restoractive }}</td>
                                                    <td>
                                                        <a href="{{ path('app_repas_edit', {'idrepas': repa.idrepas}) }}" class="btn btn-pill btn-warning btn-air-warning btn-air-warning mb-2"><i class="mdi mdi-feather"></i></a>
                                                        <form method="post" action="{{ path('app_repas_delete', {'idrepas': repa.idrepas}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ repa.idrepas) }}">
                                                            <button class="btn btn-pill btn-danger btn-air-secondary btn-air-secondary"><i class="mdi mdi-trash-can"></i></button>
                                                        </form>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="11">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    {% endblock %}

