{% extends 'base-back.html.twig' %}

{% block title %}Wishlist index{% endblock %}

{% block body %}
    <h1>Wishlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idwishlist</th>
                <th>Idproduit</th>
                <th>Iduser</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wishlist in wishlists %}
            <tr>
                <td>{{ wishlist.idwishlist }}</td>
                <td>{{ wishlist.idproduit }}</td>
                <td>{{ wishlist.iduser }}</td>
                <td>{{ wishlist.note }}</td>
                <td>
                    <a href="{{ path('app_wishlist_show', {'idwishlist': wishlist.idwishlist}) }}">show</a>
                    <a href="{{ path('app_wishlist_edit', {'idwishlist': wishlist.idwishlist}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_wishlist_new') }}">Create new</a>
{% endblock %}
