{% extends 'base-front.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h2>Search A Post !!</h2>

    <div class="sidebar-search">

        <div class="input-group custom-search-form">

            <input type="text" id="search" class="form-control" placeholder="Search here">
        </div>
        <!-- /input-group -->
    </div>
    <ul class="nav" id="side-menu">
        <li>
            <a href="#"> Entities<span class="fa arrow"></span></a>
            <ul class="nav nav-second-level" id="entitiesNav">
            </ul>
        </li>
    </ul><br><br><br><br>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <script type="text/javascript">
        jQuery(document).ready(function() {
            var searchRequest = null;
            $("#search").keyup(function() {
                var minlength = 1;
                var that = this;
                var value = $(this).val();
                var entitySelector = $("#entitiesNav").html('');
                if (value.length >= minlength ) {
                    if (searchRequest != null)
                        searchRequest.abort();
                    searchRequest = $.ajax({
                        type: "GET",
                        url: "{{ path('ajax_search') }}",
                        data: {
                            'q' : value
                        },
                        //dataType: "text",
                        success: function(msg){
                            alert("Message1");
                            //we need to check if the value is the same
                            if (value===$(that).val()) {
                                alert("Message2");
                                var result = JSON.parse(msg);
                                $.each(result, function(key, arr) {
                                    $.each(arr, function(id, value) {
                                            alert("Message3");
                                            if (id !== 'error') {
                                                console.log(value[1]);
                                                console.log('test');
                                                entitySelector.append('<li><b>'+value[1]+'</b><b href="/publication/'+id+'">'+'<b> value[0] </b></li>');
                                            } else {
                                                console.log('test');
                                                entitySelector.append('<li class="errorLi">'+value+'</li>');
                                            }

                                    });
                                });
                            }
                        }
                    });
                }
            });
        });
    </script>
    <h1>Publication index</h1>
    <a href="{{ path('app_publication_new') }}"><h3>ask a question!</h3></a>

    <table class="table">
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Publication</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.iduser }}</td>
                <td><a href="{{ path('app_publication_show', {'id': publication.id}) }}"> <div class="row">
                            {{ publication.publication|raw }}
                        </div></a></td>
                <td>{{ publication.datepublication }}</td>
                <td>
                    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
