{% extends 'base.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Datepublication</th>
                <th>Publication</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <!--{ publication.idpublication }}{ publication.iduser }}-->

                <td>{{ publication.datepublication }}</td>
                <td>{{ publication.publication }}</td>
                <td>
                    <a href="{{ path('app_publication_show', {'idpublication': publication.idpublication}) }}">show</a>
                    <a href="{{ path('app_publication_edit', {'idpublication': publication.idpublication}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publication_new') }}">Create new</a>
{% endblock %}
